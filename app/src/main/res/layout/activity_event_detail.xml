<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Event title -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textStyle="bold"
            android:textSize="22sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description goes here" />

        <!-- Date/Time -->
        <TextView
            android:id="@+id/event_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date and Time: 2025-10-31 10:00 PM" />

        <!-- Registration window -->
        <TextView
            android:id="@+id/event_reg_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Registration: 2025-10-20 â†’ 2025-10-30" />

        <!-- Location -->
        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Location: TBD" />

        <!-- QR code -->
        <ImageView
            android:id="@+id/event_qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:contentDescription="Event QR Code" />

        <!-- Join Waitlist button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join_waitlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Waitlist"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>



