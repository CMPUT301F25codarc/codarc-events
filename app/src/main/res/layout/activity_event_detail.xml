<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/entrant_background"
    android:overScrollMode="never">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- ðŸŸ£ Top Padding Before Poster -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@android:color/transparent" />

        <!-- ðŸŸ£ Event Poster Banner -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/event_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_event_banner"
                android:contentDescription="Event Poster Banner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="188dp" />


        </FrameLayout>

        <!-- ðŸŸ£ Event Info Section (No CardView) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <!-- Title + Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Title"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <ImageButton
                    android:id="@+id/btn_event_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/primary_purple"
                    android:visibility="gone"
                    android:contentDescription="Event Settings" />
            </LinearLayout>

            <!-- Location + Date -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Location: TBD"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/event_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday, Nov 7 at 7PM"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Tags Display -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacing="4dp"
                app:singleLine="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="@color/divider" />

            <!-- Overview -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description goes here."
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

            <!-- Registration -->
            <TextView
                android:id="@+id/event_reg_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Registration: 2025-10-20 â†’ 2025-10-30"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- QR Code -->

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/event_qr"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:contentDescription="Event QR Code"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_join_waitlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reserve a Spot"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:backgroundTint="@color/primary_purple"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_leave_waitlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leave Waitlist"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    android:backgroundTint="@color/primary_purple_light"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/entrant_action_button_purple" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>

