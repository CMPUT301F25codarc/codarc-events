<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_event_settings_gradient"
    android:gravity="center_horizontal">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_purple"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Card Container for Buttons -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Manage Waitlist -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_waitlist"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Waitlist"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Run Lottery Draw -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_run_lottery"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run Lottery Draw"
                android:textSize="16sp"
                android:backgroundTint="@color/primary_purple"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <!-- View Winners -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_winners"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Winners"
                android:textSize="16sp"
                android:textColor="@color/primary_purple"
                android:layout_marginBottom="12dp" />

            <!-- View Cancelled -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_cancelled"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Cancelled"
                android:textSize="16sp"
                android:textColor="@color/error_red"
                android:layout_marginBottom="12dp" />

            <!-- View Enrolled -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_enrolled"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Enrolled"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Update Poster -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_poster"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Event Poster"
                android:textSize="16sp"
                android:textColor="@color/primary_purple" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
