<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_manage_waitlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Waitlist"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_run_lottery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run Lottery Draw"
        android:textSize="16sp"
        android:backgroundTint="@color/primary_purple"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Winners"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_cancelled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Cancelled"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_enrolled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Enrolled"
        android:textSize="16sp" />

</LinearLayout>
