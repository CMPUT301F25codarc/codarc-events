<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/entrant_event_card_background"
    app:useCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Event Title -->
        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Event Title"
            android:textColor="@color/entrant_event_card_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Lottery End Date (must stay VISIBLE if adapter updates it) -->
        <TextView
            android:id="@+id/tv_lottery_ends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@color/entrant_event_card_location"
            android:textSize="14sp"
            android:text="" />

        <!-- Entrants / Duration / (sometimes) Waitlist text target -->
        <TextView
            android:id="@+id/tv_entrants_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@color/entrant_event_card_location"
            android:textSize="14sp"
            android:text="" />

        <!-- Live Waitlist Count (if your code updates this id directly) -->
        <TextView
            android:id="@+id/tv_waitlist_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:text="Waitlist: â€¦"
            android:textColor="@color/entrant_event_card_text"
            android:textStyle="italic"
            android:textSize="14sp" />

        <!-- Tags Display -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:chipSpacing="4dp"
            app:singleLine="true" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider" />

        <!-- Lottery Info Button -->
        <LinearLayout
            android:id="@+id/btn_lottery_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_info"
                android:tint="@color/entrant_action_button_purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lottery_info"
                android:textColor="@color/entrant_action_button_purple"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Keep join button node present (in case code binds listeners by id) -->
        <LinearLayout
            android:id="@+id/btn_join_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

