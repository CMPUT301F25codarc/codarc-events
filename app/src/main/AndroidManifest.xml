<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera.any" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Codarcevents">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <activity
            android:name=".views.LandingActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
        <activity
            android:name=".views.EventBrowserActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.EventDetailsActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.CreateEventActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.ProfileCreationActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.QRScannerActivity"
            android:exported="true"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.EventSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.ManageWaitlistActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.DrawActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.ViewWinnersActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.ViewCancelledActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>
        <activity
            android:name=".views.ViewEnrolledActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.RegistrationHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.FullScreenImageActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".views.AdminEventListActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.AdminProfileListActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.AdminImageListActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.AdminNotificationLogActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.AdminOrganizerListActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <activity
            android:name=".views.EntrantMapActivity"
            android:exported="false"
            android:theme="@style/Theme.Codarcevents"/>

        <service
            android:name=".services.CodarcFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>